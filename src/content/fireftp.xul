        onmouseup     = "treeHighlighter.mouseUp  (event)"
        onload        = "startup()"
        onunload      = "unload()"
        onresize      = "doResizeReverseHack()"
        disablefastfind="true">

  <html:link rel="icon" href="chrome://fireftp/skin/icons/logo.png" style="display:none"/>

