<!DOCTYPE window SYSTEM "chrome://fireftp/locale/fireftp.dtd">
<window id            = "fireftp-main-window"
        title         = "FireFTP"
        width         = "800"
        height        = "600"
        orient        = "vertical"
        xmlns         = "http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
